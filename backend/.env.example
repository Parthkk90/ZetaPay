# Server Configuration
NODE_ENV=development
PORT=3001
API_VERSION=v1

# Database - PostgreSQL
DB_HOST=localhost
DB_PORT=5432
DB_NAME=zetapay
DB_USER=postgres
DB_PASSWORD=your_password_here

# Database - MongoDB (alternative)
MONGODB_URI=mongodb://localhost:27017/zetapay

# Redis (for caching and rate limiting)
REDIS_URL=redis://localhost:6379

# JWT Authentication
JWT_SECRET=your_super_secret_jwt_key_change_this_in_production
JWT_EXPIRES_IN=7d
API_KEY_SALT_ROUNDS=10

# ZetaChain Configuration
ZETA_NETWORK=testnet
ZETA_RPC_URL=https://zetachain-athens-evm.blockpi.network/v1/rpc/public
UNIVERSAL_PAYMENT_CONTRACT=0x7a9cEdD3df8694Ef06B81A1E22Fb324353E35B01
PRIVATE_KEY=your_backend_wallet_private_key

# Stripe Integration
STRIPE_SECRET_KEY=sk_test_your_stripe_secret_key
STRIPE_PUBLISHABLE_KEY=pk_test_your_stripe_publishable_key
STRIPE_WEBHOOK_SECRET=whsec_your_webhook_secret

# PayPal Integration
PAYPAL_MODE=sandbox
PAYPAL_CLIENT_ID=your_paypal_client_id
PAYPAL_CLIENT_SECRET=your_paypal_client_secret

# Price Feeds (CoinGecko, etc.)
COINGECKO_API_KEY=your_coingecko_api_key
PRICE_UPDATE_INTERVAL=60000

# KYC/AML Configuration

# Persona Identity Verification
PERSONA_API_KEY=persona_sandbox_your_api_key
PERSONA_TEMPLATE_ID=itmpl_your_template_id
PERSONA_WEBHOOK_SECRET=your_persona_webhook_secret
PERSONA_ENVIRONMENT=sandbox

# Onfido Document Verification
ONFIDO_API_TOKEN=api_sandbox.your_onfido_token
ONFIDO_API_BASE=https://api.us.onfido.com/v3.6
ONFIDO_WEBHOOK_TOKEN=your_onfido_webhook_token

# AML Transaction Monitoring
AML_HIGH_VALUE_THRESHOLD=10000
AML_DAILY_LIMIT=50000
AML_VELOCITY_COUNT=10
AML_VELOCITY_WINDOW=86400000

# Frontend URL
FRONTEND_URL=http://localhost:3000

# Monitoring & Logging
SENTRY_DSN=your_sentry_dsn
LOG_LEVEL=info

# Email Notifications
SENDGRID_API_KEY=your_sendgrid_api_key
FROM_EMAIL=noreply@zetapay.io

# CORS Settings
ALLOWED_ORIGINS=http://localhost:3000,chrome-extension://your-extension-id

# Rate Limiting
RATE_LIMIT_WINDOW=15
RATE_LIMIT_MAX_REQUESTS=100

# Webhook Configuration
WEBHOOK_RETRY_ATTEMPTS=3
WEBHOOK_TIMEOUT=5000
